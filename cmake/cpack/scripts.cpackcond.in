if(CPACK_GENERATOR STREQUAL "RPM")
  set(CPACK_PACKAGING_INSTALL_PREFIX "@XP_RPM_INSTALLDIR@")
  list(REMOVE_ITEM CPACK_COMPONENTS_ALL test tool)
elseif(CPACK_GENERATOR STREQUAL "WIX")
  list(REMOVE_ITEM CPACK_COMPONENTS_ALL test tool)
elseif(CPACK_GENERATOR STREQUAL "TXZ" OR CPACK_GENERATOR STREQUAL "ZIP")
  unset(CPACK_PACKAGING_INSTALL_PREFIX)
  if(NOT "" STREQUAL "@XP_ARCHIVE_PREFIX@")
    set(CPACK_SET_DESTDIR TRUE)
    set(CPACK_INSTALL_PREFIX "@XP_ARCHIVE_PREFIX@")
  endif()
endif()
