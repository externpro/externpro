{
  "version": 8,
  "include": ["../../../CMakePresetsBase.json"],
  "configurePresets": [
    {
      "name": "isLinux",
      "hidden": true,
      "condition": {
        "type": "allOf",
        "conditions": [
          { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Linux" },
          { "lhs": "$penv{JETPACK}", "type": "equals", "rhs": "" }
        ]
      }
    },
    {
      "name": "Linux",
      "displayName": "config Linux Ninja",
      "inherits": ["config-base", "isLinux"],
      "generator": "Ninja Multi-Config"
    }
  ],
  "buildPresets": [
    {
      "name": "isLinux",
      "hidden": true,
      "condition": {
        "type": "allOf",
        "conditions": [
          { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Linux" },
          { "lhs": "$penv{JETPACK}", "type": "equals", "rhs": "" }
        ]
      }
    },
    {
      "name": "LinuxDebug",
      "displayName": "build Linux Debug",
      "inherits": ["isLinux"],
      "configurePreset": "Linux",
      "configuration": "Debug"
    },
    {
      "name": "LinuxRelease",
      "displayName": "build Linux Release",
      "inherits": ["isLinux"],
      "targets": ["all", "install"],
      "configurePreset": "Linux",
      "configuration": "Release"
    },
    {
      "name": "LinuxReleaseNoInstall",
      "displayName": "build Linux Release, no install",
      "inherits": ["isLinux"],
      "configurePreset": "Linux",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "isLinux",
      "hidden": true,
      "condition": {
        "type": "allOf",
        "conditions": [
          { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Linux" },
          { "lhs": "$penv{JETPACK}", "type": "equals", "rhs": "" }
        ]
      }
    },
    {
      "name": "LinuxDebug",
      "displayName": "test Linux Debug",
      "inherits": ["isLinux"],
      "configurePreset": "Linux",
      "configuration": "Debug",
      "output": { "outputOnFailure": true },
      "execution": { "noTestsAction": "ignore", "stopOnFailure": false }
    },
    {
      "name": "LinuxRelease",
      "displayName": "test Linux Release",
      "inherits": ["isLinux"],
      "configurePreset": "Linux",
      "configuration": "Release",
      "output": { "outputOnFailure": true },
      "execution": { "noTestsAction": "ignore", "stopOnFailure": false }
    }
  ],
  "packagePresets": [
    {
      "name": "isLinux",
      "hidden": true,
      "condition": {
        "type": "allOf",
        "conditions": [
          { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Linux" },
          { "lhs": "$penv{JETPACK}", "type": "equals", "rhs": "" }
        ]
      }
    },
    {
      "name": "Linux",
      "displayName": "package Linux",
      "inherits": ["isLinux"],
      "configurePreset": "Linux",
      "configurations": ["Debug", "Release"]
    },
    {
      "name": "LinuxRelease",
      "displayName": "package Linux Release",
      "inherits": ["isLinux"],
      "configurePreset": "Linux",
      "configurations": ["Release"]
    }
  ],
  "workflowPresets": [
    {
      "name": "Linux",
      "displayName": "workflow Linux",
      "steps": [
        {
          "type": "configure",
          "name": "Linux"
        },
        {
          "type": "build",
          "name": "LinuxDebug"
        },
        {
          "type": "build",
          "name": "LinuxRelease"
        },
        {
          "type": "test",
          "name": "LinuxDebug"
        },
        {
          "type": "test",
          "name": "LinuxRelease"
        },
        {
          "type": "package",
          "name": "Linux"
        }
      ]
    },
    {
      "name": "LinuxRelease",
      "displayName": "workflow Linux Release",
      "steps": [
        {
          "type": "configure",
          "name": "Linux"
        },
        {
          "type": "build",
          "name": "LinuxRelease"
        },
        {
          "type": "package",
          "name": "LinuxRelease"
        }
      ]
    },
    {
      "name": "LinuxReleaseNoInstall",
      "displayName": "workflow Linux Release, no install",
      "steps": [
        {
          "type": "configure",
          "name": "Linux"
        },
        {
          "type": "build",
          "name": "LinuxReleaseNoInstall"
        }
      ]
    }
  ]
}
