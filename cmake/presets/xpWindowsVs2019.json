{
  "version": 8,
  "include": ["../../../CMakePresetsBase.json"],
  "configurePresets": [
    {
      "name": "isWindows",
      "hidden": true,
      "condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Windows" }
    },
    {
      "name": "Windows",
      "displayName": "config Windows VS2019",
      "inherits": ["config-base", "isWindows"],
      "generator": "Visual Studio 16 2019",
      "architecture": "x64"
    }
  ],
  "buildPresets": [
    {
      "name": "isWindows",
      "hidden": true,
      "condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Windows" }
    },
    {
      "name": "WindowsDebug",
      "displayName": "build Windows Debug",
      "inherits": ["isWindows"],
      "configurePreset": "Windows",
      "configuration": "Debug"
    },
    {
      "name": "WindowsRelease",
      "displayName": "build Windows Release",
      "inherits": ["isWindows"],
      "targets": ["ALL_BUILD", "INSTALL"],
      "configurePreset": "Windows",
      "configuration": "Release"
    }
  ],
  "packagePresets": [
    {
      "name": "isWindows",
      "hidden": true,
      "condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Windows" }
    },
    {
      "name": "Windows",
      "displayName": "package Windows",
      "inherits": ["isWindows"],
      "configurePreset": "Windows",
      "configurations": ["Debug", "Release"]
    }
  ],
  "workflowPresets": [
    {
      "name": "Windows",
      "displayName": "workflow Windows",
      "steps": [
        {
          "type": "configure",
          "name": "Windows"
        },
        {
          "type": "build",
          "name": "WindowsDebug"
        },
        {
          "type": "build",
          "name": "WindowsRelease"
        },
        {
          "type": "package",
          "name": "Windows"
        }
      ]
    }
  ]
}
