{
  "version": 8,
  "include": ["../../../CMakePresetsBase.json"],
  "configurePresets": [
    {
      "name": "isWindows",
      "hidden": true,
      "condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Windows" }
    },
    {
      "name": "Windows",
      "displayName": "configure Windows VS2022",
      "inherits": ["config-base", "isWindows"],
      "generator": "Visual Studio 17 2022",
      "architecture": "x64"
    }
  ],
  "buildPresets": [
    {
      "name": "isWindows",
      "hidden": true,
      "condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Windows" }
    },
    {
      "name": "WindowsDebug",
      "displayName": "build Windows Debug",
      "inherits": ["isWindows"],
      "configurePreset": "Windows",
      "configuration": "Debug"
    },
    {
      "name": "WindowsRelease",
      "displayName": "build Windows Release",
      "inherits": ["isWindows"],
      "targets": ["ALL_BUILD", "INSTALL"],
      "configurePreset": "Windows",
      "configuration": "Release"
    },
    {
      "name": "WindowsReleaseNoInstall",
      "displayName": "build Windows Release, no install",
      "inherits": ["isWindows"],
      "configurePreset": "Windows",
      "configuration": "Release"
    },
    {
      "name": "WindowsReleaseTargets",
      "displayName": "build Windows Release Target(s) from CMakePresetsBase",
      "inherits": ["WindowsReleaseNoInstall", "build-base"]
    }
  ],
  "testPresets": [
    {
      "name": "isWindows",
      "hidden": true,
      "condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Windows" }
    },
    {
      "name": "WindowsDebug",
      "displayName": "test Windows Debug",
      "inherits": ["isWindows"],
      "configurePreset": "Windows",
      "configuration": "Debug",
      "output": { "outputOnFailure": true },
      "execution": { "noTestsAction": "ignore", "stopOnFailure": false }
    },
    {
      "name": "WindowsRelease",
      "displayName": "test Windows Release",
      "inherits": ["isWindows"],
      "configurePreset": "Windows",
      "configuration": "Release",
      "output": { "outputOnFailure": true },
      "execution": { "noTestsAction": "ignore", "stopOnFailure": false }
    }
  ],
  "packagePresets": [
    {
      "name": "isWindows",
      "hidden": true,
      "condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Windows" }
    },
    {
      "name": "Windows",
      "displayName": "package Windows",
      "inherits": ["isWindows"],
      "configurePreset": "Windows",
      "configurations": ["Debug", "Release"]
    },
    {
      "name": "WindowsRelease",
      "displayName": "package Windows Release",
      "inherits": ["isWindows"],
      "configurePreset": "Windows",
      "configurations": ["Release"]
    }
  ],
  "workflowPresets": [
    {
      "name": "Windows",
      "displayName": "workflow Windows",
      "steps": [
        {
          "type": "configure",
          "name": "Windows"
        },
        {
          "type": "build",
          "name": "WindowsDebug"
        },
        {
          "type": "build",
          "name": "WindowsRelease"
        },
        {
          "type": "test",
          "name": "WindowsDebug"
        },
        {
          "type": "test",
          "name": "WindowsRelease"
        },
        {
          "type": "package",
          "name": "Windows"
        }
      ]
    },
    {
      "name": "WindowsRelease",
      "displayName": "workflow Windows Release",
      "steps": [
        {
          "type": "configure",
          "name": "Windows"
        },
        {
          "type": "build",
          "name": "WindowsRelease"
        },
        {
          "type": "package",
          "name": "WindowsRelease"
        }
      ]
    },
    {
      "name": "WindowsReleaseTargets",
      "displayName": "workflow Windows Release Targets",
      "steps": [
        {
          "type": "configure",
          "name": "Windows"
        },
        {
          "type": "build",
          "name": "WindowsReleaseTargets"
        },
        {
          "type": "package",
          "name": "WindowsRelease"
        }
      ]
    },
    {
      "name": "WindowsReleaseNoInstall",
      "displayName": "workflow Windows Release, no install",
      "steps": [
        {
          "type": "configure",
          "name": "Windows"
        },
        {
          "type": "build",
          "name": "WindowsReleaseNoInstall"
        }
      ]
    }
  ]
}
