{
  "version": 8,
  "include": ["../../../CMakePresetsBase.json"],
  "configurePresets": [
    {
      "name": "isJetPack",
      "hidden": true,
      "condition": { "lhs": "$penv{JETPACK}", "type": "notEquals", "rhs": "" }
    },
    {
      "name": "JetPack",
      "displayName": "configure JetPack Ninja",
      "inherits": ["config-base", "isJetPack"],
      "toolchainFile": "${sourceDir}/.devcontainer/cmake/toolchain/jetpack5.cmake",
      "generator": "Ninja Multi-Config"
    }
  ],
  "buildPresets": [
    {
      "name": "isJetPack",
      "hidden": true,
      "condition": { "lhs": "$penv{JETPACK}", "type": "notEquals", "rhs": "" }
    },
    {
      "name": "JetPackDebug",
      "displayName": "build JetPack Debug",
      "inherits": ["isJetPack"],
      "configurePreset": "JetPack",
      "configuration": "Debug"
    },
    {
      "name": "JetPackRelease",
      "displayName": "build JetPack Release",
      "inherits": ["isJetPack"],
      "targets": ["all", "install"],
      "configurePreset": "JetPack",
      "configuration": "Release"
    },
    {
      "name": "JetPackReleaseNoInstall",
      "displayName": "build JetPack Release, no install",
      "inherits": ["isJetPack"],
      "configurePreset": "JetPack",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "isJetPack",
      "hidden": true,
      "condition": { "lhs": "$penv{JETPACK}", "type": "notEquals", "rhs": "" }
    },
    {
      "name": "JetPackDebug",
      "displayName": "test JetPack Debug",
      "inherits": ["isJetPack"],
      "configurePreset": "JetPack",
      "configuration": "Debug",
      "output": { "outputOnFailure": true },
      "execution": { "noTestsAction": "ignore", "stopOnFailure": false }
    },
    {
      "name": "JetPackRelease",
      "displayName": "test JetPack Release",
      "inherits": ["isJetPack"],
      "configurePreset": "JetPack",
      "configuration": "Release",
      "output": { "outputOnFailure": true },
      "execution": { "noTestsAction": "ignore", "stopOnFailure": false }
    }
  ],
  "packagePresets": [
    {
      "name": "isJetPack",
      "hidden": true,
      "condition": { "lhs": "$penv{JETPACK}", "type": "notEquals", "rhs": "" }
    },
    {
      "name": "JetPack",
      "displayName": "package JetPack",
      "inherits": ["isJetPack"],
      "configurePreset": "JetPack",
      "configurations": ["Debug", "Release"]
    },
    {
      "name": "JetPackRelease",
      "displayName": "package JetPack Release",
      "inherits": ["isJetPack"],
      "configurePreset": "JetPack",
      "configurations": ["Release"]
    }
  ],
  "workflowPresets": [
    {
      "name": "JetPack",
      "displayName": "workflow JetPack",
      "steps": [
        {
          "type": "configure",
          "name": "JetPack"
        },
        {
          "type": "build",
          "name": "JetPackDebug"
        },
        {
          "type": "build",
          "name": "JetPackRelease"
        },
        {
          "type": "test",
          "name": "JetPackDebug"
        },
        {
          "type": "test",
          "name": "JetPackRelease"
        },
        {
          "type": "package",
          "name": "JetPack"
        }
      ]
    },
    {
      "name": "JetPackRelease",
      "displayName": "workflow JetPack Release",
      "steps": [
        {
          "type": "configure",
          "name": "JetPack"
        },
        {
          "type": "build",
          "name": "JetPackRelease"
        },
        {
          "type": "package",
          "name": "JetPackRelease"
        }
      ]
    },
    {
      "name": "JetPackReleaseNoInstall",
      "displayName": "workflow JetPack Release, no install",
      "steps": [
        {
          "type": "configure",
          "name": "JetPack"
        },
        {
          "type": "build",
          "name": "JetPackReleaseNoInstall"
        }
      ]
    }
  ]
}
