{
  "version": 8,
  "include": ["../../../CMakePresetsBase.json"],
  "configurePresets": [
    {
      "name": "isLinux",
      "hidden": true,
      "condition": {
        "type": "allOf",
        "conditions": [
          { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Linux" }
        ]
      }
    },
    {
      "name": "Linux",
      "displayName": "configure Linux Ninja",
      "inherits": ["config-base", "isLinux"],
      "generator": "Ninja"
    }
  ],
  "buildPresets": [
    {
      "name": "isLinux",
      "hidden": true,
      "condition": {
        "type": "allOf",
        "conditions": [
          { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Linux" }
        ]
      }
    },
    {
      "name": "LinuxReleaseTargets",
      "displayName": "build Linux Release Target(s) from CMakePresetsBase",
      "inherits": ["isLinux", "build-base"],
      "configurePreset": "Linux",
      "configuration": "Release"
    }
  ],
  "packagePresets": [
    {
      "name": "isLinux",
      "hidden": true,
      "condition": {
        "type": "allOf",
        "conditions": [
          { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Linux" }
        ]
      }
    },
    {
      "name": "LinuxRelease",
      "displayName": "package Linux Release",
      "inherits": ["isLinux"],
      "configurePreset": "Linux",
      "configurations": ["Release"]
    }
  ],
  "workflowPresets": [
    {
      "name": "LinuxReleaseTargets",
      "displayName": "workflow Linux Release Targets",
      "steps": [
        {
          "type": "configure",
          "name": "Linux"
        },
        {
          "type": "build",
          "name": "LinuxReleaseTargets"
        },
        {
          "type": "package",
          "name": "LinuxRelease"
        }
      ]
    }
  ]
}
