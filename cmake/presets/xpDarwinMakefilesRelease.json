{
  "version": 8,
  "include": ["../../../CMakePresetsBase.json"],
  "configurePresets": [
    {
      "name": "isDarwin",
      "hidden": true,
      "condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Darwin" }
    },
    {
      "name": "Darwin",
      "displayName": "config Darwin Release Makefiles",
      "inherits": ["config-base", "isDarwin"],
      "generator": "Unix Makefiles",
      "cacheVariables": { "CMAKE_BUILD_TYPE": "Release" }
    }
  ],
  "buildPresets": [
    {
      "name": "isDarwin",
      "hidden": true,
      "condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Darwin" }
    },
    {
      "name": "DarwinRelease",
      "displayName": "build Darwin Release",
      "inherits": ["isDarwin"],
      "jobs": 8,
      "configurePreset": "Darwin",
      "configuration": "Release"
    }
  ],
  "packagePresets": [
    {
      "name": "isDarwin",
      "hidden": true,
      "condition": { "lhs": "${hostSystemName}", "type": "equals", "rhs": "Darwin" }
    },
    {
      "name": "Darwin",
      "displayName": "package Darwin",
      "inherits": ["isDarwin"],
      "configurePreset": "Darwin",
      "configurations": ["Release"]
    }
  ],
  "workflowPresets": [
    {
      "name": "Darwin",
      "displayName": "workflow Darwin",
      "steps": [
        {
          "type": "configure",
          "name": "Darwin"
        },
        {
          "type": "build",
          "name": "DarwinRelease"
        },
        {
          "type": "package",
          "name": "Darwin"
        }
      ]
    }
  ]
}
