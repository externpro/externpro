#!/bin/bash -xe
set -e

rm -rf @P_PKG@
mkdir @P_PKG@
rm -rf WorkDir
mkdir WorkDir

baseurl=https://@P_REPO@/releases/download/@P_TAG@
downloadAndCompare() {
  curl -L -o @P_PKG@/$1 $baseurl/$1
  echo "$2 ./@P_PKG@/$1" > WorkDir/checksum
  sha256sum --check WorkDir/checksum
  rm WorkDir/checksum
}

downloadRepo() {
  git clone https://@P_REPO@ --bare
  tar -cJf ../@P_PKG@/@P_PKG@.tar.xz @P_PKG@.git
}

echo -e 'v2
{"branch":"@P_BRANCH@","owner":"@P_ORG@","projectName":"@P_PKG@","secureWorkflows":[],"submodules":[],"version":"@P_TAG@"}
' > @P_PKG@/info.txt
pushd WorkDir
downloadRepo
popd
@unitTestResults@
downloadAndCompare @P_PKG@-@P_TAG@-win64-devel.tar.xz @P_SHA256_win64@
downloadAndCompare @P_PKG@-@P_TAG@-Linux-devel.tar.xz @P_SHA256_Linux@
tar -cJf @P_PKG@_@P_TAG@.tar.xz @P_PKG@

rm -rf @P_PKG@
rm -rf WorkDir
